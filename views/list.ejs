<%- include("header") -%>
<body>
  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>

  <div class="box">
    <ul>


      <%newListItem.forEach(function(i){ %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="apple" value= "<%=i._id %>" onchange="this.form.submit()"><p><%=i.name%></p>
          </div>
          <input type="hidden" name="listName" value="<%= listTitle %> " >
        </form>
      <% }); %>
    </ul>

  <!-- incoming task from user -->
  <form class="banana" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value= "<%= listTitle %>" >+</button>
  </form>
  </div>

</body>
<%- include("footer") -%>
